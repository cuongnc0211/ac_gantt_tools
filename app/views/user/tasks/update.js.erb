$("#details .task-<%= @task.id %>").html("<%= j render "user/dash_board/task_progress_bar", task: @task, start_date: @start_date, end_date: @end_date %>");
$("#info .task-<%= @task.id %>").html("<%= j render "user/dash_board/info/task", task: @task, project: @project %>");
mergeCellTable("<%= @task.id %>");

<% if @parent_task.present? %>
  $("#details .task-<%= @parent_task.id %>").html("<%= j render "user/dash_board/task_progress_bar", task: @parent_task, start_date: @start_date, end_date: @end_date %>");
  $("#info .task-<%= @parent_task.id %>").html("<%= j render "user/dash_board/info/task", task: @parent_task, project: @project %>");
  mergeCellTable("<%= @parent_task.id %>");
<% end %>

$("#task-detail-modal").modal("hide");
