<div class="login-box">
  <div class="login-logo">
    <a href="/"><b>Gantt</b>Tool</a>
  </div>
  <!-- /.login-logo -->
  <div class="login-box-body">
    <p class="login-box-msg">Sign in to start your session</p>

    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>

      <div class="form-group has-feedback">
        <%= f.email_field :email, class: "form-control", autofocus: true, autocomplete: "email", 'placeholder': "Email" %>
        <span class="glyphicon glyphicon-envelope form-control-feedback"></span>
      </div>
      <div class="form-group has-feedback">
        <%= f.password_field :password, class: 'form-control', autocomplete: "current-password", 'placeholder': "Password" %>
        <span class="glyphicon glyphicon-lock form-control-feedback"></span>
      </div>

      <% if devise_mapping.rememberable? %>

        <div class="row">
          <div class="col-xs-8">
            <div class="field">
              <%= f.check_box :remember_me %>
              <%= f.label :remember_me %>
            </div>
          </div>
          <!-- /.col -->
          <div class="col-xs-4">
            <%= f.submit "Log in", class: "btn btn-primary btn-block btn-flat" %>
          </div>
          <!-- /.col -->
        </div>
      <% end %>
    <% end %>
  </div>
</div>